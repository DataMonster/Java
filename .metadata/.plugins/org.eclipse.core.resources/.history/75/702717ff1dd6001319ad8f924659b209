package collection3;

import java.math.BigInteger;

public class POW {

	public static double pow(double x, int n) {
		
		BigInteger BI = new BigInteger();
        if(n<0) return 0.0;
        if(n==0) return 1;
		if(n==1) return x;
        return pow(x*x,n-1);
    }
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(pow(1,100));
	}

}
